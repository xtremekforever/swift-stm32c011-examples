{
    "name": "swift-stm32c011-examples",
    "image": "swiftlang/swift:nightly-jammy",
    "mounts": [
        "type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/vscode/.ssh",
        // Forward USB devices to be able to use st-flash
        "type=bind,source=/dev/bus/usb,target=/dev/bus/usb"
    ],
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "false",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "false"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "os-provided",
            "ppa": "false"
        },
        "ghcr.io/meaningful-ooo/devcontainer-features/fish:1": {
            "fisher": true
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        // Use privileged mode to have access to USB devices on the host
        "--privileged"
    ],
    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "lldb.library": "/usr/lib/liblldb.so"
            },
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "sswg.swift-lang",
                "dan-c-underwood.arm",
                "ms-vscode.cpptools",
                "chiehyu.vscode-astyle",
                "trond-snekvik.gnu-mapfiles",
                "ms-vscode.hexeditor",
                "keroc.hex-fmt",
                "ZixuanWang.linkerscript",
                "eamodio.gitlens"
            ]
        }
    },
    "postCreateCommand": "./scripts/install-dependencies-ubuntu.sh",
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "vscode"
}